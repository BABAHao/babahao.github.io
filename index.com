<html>
	<head>
		<!DOCTYPE html>
		<meta charset="utf-8">
		<title>I love panda</title>
		<link rel="stylesheet" type="text/css" href=".css">
		<style>
			body {
				background-image: url(image/baboo.jpg); 
				background-repeat: no-repeat;
				background-color: #6eac59;
				background-attachment: fixed;
				background-position:center top;
				background-color: #2ffa00;
			}
			header{
				font-family: Georgia, serif;
				font-size: 300%;
				font-weight: bold;
				line-height:3em;
				text-shadow: .1em .1em .2em lightslategray;
				background-color: #2ffa00;
				margin: auto;
			}
			h1 {
				font:bold 1.5em "Marko One", Georgia, serif; 
				color: purple;
				text-align: center;
				margin: auto;
			}
			#borderimg {
				border: 10px solid transparent;
				background-color: #2ffa00;
				padding: 15px;
				border-image: url(image/border.png) 30 round;
				-webkit-border-image: url(image/border.png) 30 round; /* Safari 3.1-5 */
				-o-border-image: url(image/border.png) 30 round; /* Opera 11-12.1 */
				text-align: center;
				position: sticky;
				width: 80%;
			}
		</style>
		<script language="JavaScript"><!--
				which_image_loaded = 0;
			NUMBER_OF_IMAGES = 5;
			
			ImageNames = new Object();
			ImageNames.length = 4;
			
			for (counter = 0; counter < NUMBER_OF_IMAGES; counter++){
				file_number = counter + 1;
				filename = ("image/splash_" + file_number + ".jpg");
				ImageNames[counter] = filename;
			}

			function changeImage(direction) {
				which_image_loaded += direction;
				if (which_image_loaded < 0)
					which_image_loaded = NUMBER_OF_IMAGES - 1;
				if (which_image_loaded == NUMBER_OF_IMAGES)
					which_image_loaded = 0;
				if (document.images)
					document.myimage.src = ImageNames[which_image_loaded];
			}
			//--></script>
	</head>
	<body>
		<header>
			<h1>
				<p>
				<img src="image/logo.png" alt="logo" />
				GIANT PANDA
				</p>
			</h1>
		</header>
		<h1 id="borderimg">
					
			<a href="homepage.htm"><img src="image/splash_1.jpg" name="myimage" height="600ox" width="auto" ></a>
			<form>
				<input type="button" value="<<" onClick='changeImage(-1);'>
				<input type="button" value=">>" onClick='changeImage(1);'>
			</form>
		</h1>
		
	</body>
</html>
